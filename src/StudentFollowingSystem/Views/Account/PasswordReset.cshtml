@model StudentFollowingSystem.ViewModels.LoginModel
@{
    ViewBag.Title = "Inloggen";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p class="lead">
            Password reset
        </p>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "alert-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Verstuur" class="btn btn-success" />
                <a href="~/inloggen" class="btn btn-success">Terug</a>
            </div>

        </div>
    </div>
}

