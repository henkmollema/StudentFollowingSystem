@model IEnumerable<AppointmentModel>

@{
    ViewBag.Title = "Afspraken";
}

<h2>Afspraken</h2>

<p>
    @Html.ActionLink("Nieuwe afspraak maken", "AppointmentByCounseler")
</p>
<table class="table table-hover table-sorted" data-toggle="table" data-sort-name="lastName">
    <thead>
        <tr>
            <th data-field="date" data-sortable="true">
                Datum
            </th>
            <th data-field="firstName" data-sortable="true">
                Voornaam
            </th>
            <th data-field="lastName" data-sortable="true">
                Achternaam
            </th>
            <th data-field="accepted" data-sortable="true">
                Geaccepteerd
            </th>
            <th data-field="notes" data-sortable="true">
                Vastgelegd
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tableRowData" onclick="location.href = '@Url.Action("Details", "Appointment", new { id = item.Id })'">
                <td>
                    @item.DateTime.ToString("d MMMM yyyy")
                </td>
                <td>
                    @item.Student.FirstName
                </td>
                <td>
                    @item.Student.LastName
                </td>
                <td>
                    @item.Accepted
                </td>
                <td>
                    @item.Noted
                </td>
            </tr>
        }
    </tbody>
</table>
