@model StudentFollowingSystem.ViewModels.ClassModel

@{
    ViewBag.Title = "Klas verwijderen";
}

<h2>Klas verwijderen</h2>

<h3>Weet je zeker dat je deze klas wilt verwijderen?</h3>
<div>
    <hr />
    <h4>Klas: @Model.Name</h4>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
            @Html.ActionLink("Terug naar het overzicht", "List")
        </div>
    }
</div>
