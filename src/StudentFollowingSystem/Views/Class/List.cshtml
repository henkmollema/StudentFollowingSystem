@model IEnumerable<StudentFollowingSystem.ViewModels.ClassModel>

@{
    ViewBag.Title = "Overzicht";
}

<h2>Overzicht</h2>

<p>
    @Html.ActionLink("Nieuwe klas toevoegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Klas naam
        </th>
        <th>
            Afdeling
        </th>
        <th>
            SLB'er
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Section
        </td>
        <td>
            @item.Counseler.FullName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
