@model StudentFollowingSystem.ViewModels.CounselerDashboardModel

@{
    ViewBag.Title = "Dashboard";
}


<div class="container">
    <div class="col-md-6">
        <h3>Afspraken voor deze week</h3>
        <ul class="list-group">
            @if (Model.Appointments.Count > 0)
            {
                foreach (var appointment in Model.Appointments)
                {
                    <li class="list-group-item">@appointment.Student.FirstName @appointment.Student.LastName (@appointment.DateTime.ToString("dddd d MMMM HH:mm")) - @appointment.Location</li>
                }
            }
            else
            {
                <li class="list-group-item">Er zijn deze week geen afspraken gepland.</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Studenten die extra aandacht nodig hebben</h3>

        <ul class="list-group">
            @foreach (var students in Model.Students)
            {
                if (students.Status == StudentFollowingSystem.Models.Status.Red)
                {
                    <li class="list-group-item" style="border-color: red">@students.FirstName @students.LastName</li>
                }
                else if (students.Status == StudentFollowingSystem.Models.Status.Orange)
                {
                    <li class="list-group-item" style="border-color: orange">@students.FirstName @students.LastName</li>
                }
                else
                {
                    <li class="list-group-item" style="border-color: green">@students.FirstName @students.LastName</li>
                }
            }
        </ul>
    </div>
</div>

