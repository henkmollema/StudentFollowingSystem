@model StudentFollowingSystem.ViewModels.MenuModel

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("NHL SVS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (Model.IsStudent)
                {
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Students")</li>
                    <li>@Html.ActionLink("Gegevens wijzigen", "EditInfo", "Students")</li>
                    <li>@Html.ActionLink("SLB gesprek aanvragen", "AppointmentByStudent", "Appointment")</li>
                }
                else if (Model.IsCounseler)
                {
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Counseler")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Overzichten <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Klassen", "List", "Class")</li>
                            <li>@Html.ActionLink("Studenten", "List", "Students")</li>
                            <li>@Html.ActionLink("Lesonderdelen", "List", "Subjects")</li>
                            <li>@Html.ActionLink("Afspraken", "List", "Appointment")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("SLB gesprek aanvragen", "AppointmentByCounseler", "Appointment")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Model.IsAuthenticated)
                {
                    <li>
                        <p class="navbar-text">
                            Welkom
                            @if (Model.IsStudent)
                            {
                                <a href="@Url.Action("EditInfo", "Students")" class="navbar-link">@Model.Username</a> @: |
                            }
                            else
                            {
                                @Model.Username @: |
                            }
                            <a href="@Url.Action("Logout", "Account")" class="navbar-link">Uitloggen</a>
                        </p>
                    </li>
                }
                else
                {
                    <li>
                        <p class="navbar-text">
                            <a href="@Url.Action("Login", "Account")" class="navbar-link">Inloggen</a>
                        </p>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
