@model StudentFollowingSystem.ViewModels.MenuModel

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("NHL SVS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (Model.IsStudent)
                {
                    <li>@Html.ActionLink("Gegevens wijzigen", "Edit", "Students")</li>
                }
                else if (Model.IsCounseler)
                {
                    <li>@Html.ActionLink("Klassen overzicht", "List", "Class")</li>
                    <li>@Html.ActionLink("Studenten overzicht", "List", "Students")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Help", "Help", "Home")</li>
            </ul>
        </div>
    </div>
</div>
