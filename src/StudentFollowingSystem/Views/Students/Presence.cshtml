@model PresenceModel
@{
    ViewBag.Title = "Aanwezigheid opgeven";
}

<h2>Aanwezigheid opgeven</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Subject.Name van @Model.Subject.StartDate.Value.ToString("HH:mm") tot @Model.Subject.EndDate.Value.ToString("HH:mm")</h4>
        <hr />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Ik ben aanwezig</button>
        </div>
    </div>
}