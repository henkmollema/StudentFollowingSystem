@model IEnumerable<SubjectModel>

@{
    ViewBag.Title = "Overzicht";
}

<h2>Overzicht</h2>

<p>
    @Html.ActionLink("Nieuw onderdeel toevoegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vak:
        </th>
        <th>
            Locatie:
        </th>
        <th>
            Klas:
        </th>
        <th>
            Start tijd:
        </th>
        <th>
            Eind tijd:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locatie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Wijzigen", "Edit", new { id=item.Id })
        </td>
    </tr>
}
</table>
